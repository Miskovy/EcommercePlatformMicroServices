generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model Cart {
  id        String     @id @default(uuid())
  userId    String     @unique // Each user has exactly one cart
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String   // We store the ID from Product Service
  quantity  Int      @default(1)
  price     Float    // Snapshot of price at time of adding (optional but good practice)
  
  @@unique([cartId, productId]) // Prevent duplicate rows for same product
}
